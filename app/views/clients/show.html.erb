
<div class="container" id="containerb">

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= image_tag @client.logo.url(:square) %>
     <div>
      <%= @client.name %>, <%= @client.email %> 
    </div>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @client.projects.any? %>
      <p class="attn">Projects (<%= @client.projects.count %>)</p>
      <ol class="projects">
        <%= render @projects %>
      </ol>
      <%= will_paginate @projects %>
    <% end %>
  </div>
</div>

<div>
  <%= link_to "Create new project", new_client_project_path(@client), class: 'btn btn-default btn-sm linktext' %>
  <%= link_to 'Back', :back, class: "btn btn-default btn-sm linktext" %>
</div>

</end>

